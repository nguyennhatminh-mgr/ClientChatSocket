<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.GroupChatActivity"
    android:padding="5dp"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtNameGroup"
        android:hint="Group Name"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_group"
        android:drawablePadding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List users online"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="22dp"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_message_border"
        android:id="@+id/lstUserInGroup"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/btnCreateGroupInGroup"/>
</LinearLayout>